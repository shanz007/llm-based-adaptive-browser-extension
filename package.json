{
  "name": "llm-based-adaptive-browser-extension",
  "version": "1.0.0",
  "description": "A Chrome plugin extension with React, ES6 modules, Jest unit testing, and Webpack.",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack serve --mode development --open --port 3001",
    "build": "webpack --mode production",
    "test": "jest"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.7",
    "@babel/preset-env": "^7.25.7",
    "@babel/preset-react": "^7.25.7",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^12.1.5",
    "babel-jest": "^29.7.0",
    "babel-loader": "^8.4.1",
    "copy-webpack-plugin": "^12.0.2",
    "jest": "^27.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|png)$": "<rootDir>/empty-module.js"
    }
  }
}
